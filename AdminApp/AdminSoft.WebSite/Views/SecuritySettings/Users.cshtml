@model IEnumerable<PLNFramework.Security.ViewModels.AppUserViewModel>

@{
    ViewBag.Title = "Users";
}

<h3><a href="@Url.Content("~/SecuritySettings/")">Admin</a>/Users</h3>

<a href="@Url.Action("CreateUser")" class="btn btn-primary">
    <span class="glyphicon glyphicon-plus"></span> New user
</a>
<p></p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.ActionLink("Details", "DetailsUser", new { id = item.Id }) |
            @Html.ActionLink("Roles", "EditUser", new { id=item.Id }) |
            @Html.ActionLink("Permission", "UserPermission", new { id = item.Id }) |
        </td>
    </tr>
}

</table>
